<% if @memberInfo.length>0 && @personInfo.length>0 then %>
$('#divMemberWidget .member-name').html('<%= @personInfo[0].prsn_fullname %>');
$('#divMemberWidget .employee-id').html('<%= @memberInfo[0].employee_id %>');

$('#txtLname').val('<%= @personInfo[0].prsn_lname %>');
$('#txtLnamesuffix').val('<%= @personInfo[0].prsn_lnamesuffix %>');
$('#txtFname').val('<%= @personInfo[0].prsn_fname %>');
$('#txtFnamesuffix').val('<%= @personInfo[0].prsn_fnamesuffix %>');
$('#txtMname').val('<%= @personInfo[0].prsn_mname %>');
$('#txtMinitial').val('<%= @personInfo[0].prsn_minitial %>');

var selectize = $('#cboGender')[0].selectize;
selectize.setValue('<%= @personInfo[0].prsn_gender %>',true);
selectize = $('#cboCivilstatus')[0].selectize;
selectize.setValue('<%= @personInfo[0].prsn_civilstatus %>',true);

<% if @personInfo[0].prsn_birthdate!=nil then
	dateFormat = "%m/%d/%Y"; %>
	$('#dtpBirthdate').val('<%= @personInfo[0].prsn_birthdate.strftime(dateFormat) %>');
<% else %>
	$('#dtpBirthdate').val('');
<% end %>

$('#txtEmployeeID').val('<%= @memberInfo[0].employee_id %>');

$('#modalMemberPersonalInfo .indicator').removeClass('show');
<% end %>
